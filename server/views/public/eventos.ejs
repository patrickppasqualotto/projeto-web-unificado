<div class="container">
  <h1>Eventos</h1>
  
  <% if (eventos && eventos.length > 0) { %>
    <div class="grid">
      <% eventos.forEach(evento => { %>
        <div class="card">
          <h3><%= evento.titulo %></h3>
          <% if (evento.descricao) { %>
            <p><%= evento.descricao.substring(0, 200) %><%= evento.descricao.length > 200 ? '...' : '' %></p>
          <% } %>
          <div class="meta">
            <strong>Local:</strong> <%= evento.local_evento || 'Local a definir' %><br>
            <strong>In√≠cio:</strong> <%= evento.data_inicio ? new Date(evento.data_inicio).toLocaleDateString('pt-BR') : 'A definir' %>
            <% if (evento.data_fim) { %>
              <br><strong>Fim:</strong> <%= new Date(evento.data_fim).toLocaleDateString('pt-BR') %>
            <% } %>
          </div>
          <a href="/public/eventos/<%= evento.id_evento %>" class="btn">Ver detalhes</a>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="empty">Nenhum evento cadastrado no momento</div>
  <% } %>
</div>