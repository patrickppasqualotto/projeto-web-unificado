<style>
  .article { background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); padding: 40px; }
  .article h1 { font-size: 2.5rem; line-height: 1.2; }
  .subtitle { color: #7f8c8d; font-size: 1.2rem; margin-bottom: 20px; font-style: italic; }
  .meta { color: #95a5a6; font-size: 0.95rem; padding: 15px 0; border-bottom: 2px solid #ecf0f1; margin-bottom: 25px; }
  .content { color: #555; line-height: 1.8; font-size: 1.05rem; }
  .article img { max-width: 100%; height: auto; border-radius: 8px; margin: 20px 0; }
</style>

<div class="container" style="max-width: 900px;">
  <div class="article">
    <h1><%= noticia.titulo %></h1>
      <% if (noticia.subtitulo) { %>
        <p class="subtitle"><%= noticia.subtitulo %></p>
      <% } %>
      <div class="meta">
        üìÖ Publicado em <%= noticia.data_publicacao ? new Date(noticia.data_publicacao).toLocaleDateString('pt-BR') : 'Data n√£o informada' %>
        <% if (noticia.data_expiracao) { %>
          | ‚è∞ Expira em <%= new Date(noticia.data_expiracao).toLocaleDateString('pt-BR') %>
        <% } %>
      </div>
      <% if (noticia.imagem_url) { %>
        <img src="<%= noticia.imagem_url %>" alt="<%= noticia.titulo %>">
      <% } %>
      <div class="content">
        <%= noticia.conteudo || 'Conte√∫do n√£o dispon√≠vel' %>
      </div>
      <a href="/public/noticias" class="btn"><‚Üê Voltar para not√≠cias</a>
    </div>
  </div>
</div>
