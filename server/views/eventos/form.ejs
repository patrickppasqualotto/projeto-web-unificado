<style>
  .form-container {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .form-header {
    margin-bottom: 30px;
  }
  
  .form-header h1 {
    color: #2c3e50;
    font-size: 2rem;
    margin-bottom: 10px;
  }
  
  .form-card {
    background: white;
    padding: 40px;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }
  
  .form-group {
    margin-bottom: 25px;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #2c3e50;
    font-size: 15px;
  }
  
  .form-group label .required {
    color: #dc3545;
  }
  
  .form-control {
    width: 100%;
    padding: 12px;
    border: 2px solid #e1e8ed;
    border-radius: 5px;
    font-size: 15px;
    font-family: inherit;
    transition: border-color 0.3s;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #667eea;
  }
  
  .form-control.error {
    border-color: #dc3545;
  }
  
  textarea.form-control {
    min-height: 100px;
    resize: vertical;
  }
  
  .form-hint {
    font-size: 13px;
    color: #7f8c8d;
    margin-top: 5px;
  }
  
  .form-error {
    color: #dc3545;
    font-size: 13px;
    margin-top: 5px;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }
  
  .form-actions {
    display: flex;
    gap: 15px;
    margin-top: 30px;
    padding-top: 30px;
    border-top: 2px solid #e1e8ed;
  }
  
  .btn {
    padding: 12px 30px;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
  }
  
  .btn-primary {
    background: #667eea;
    color: white;
    flex: 1;
  }
  
  .btn-primary:hover {
    background: #5568d3;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(102, 126, 234, 0.3);
  }
  
  .btn-secondary {
    background: #6c757d;
    color: white;
    flex: 1;
  }
  
  .btn-secondary:hover {
    background: #5a6268;
  }
  
  .alert {
    padding: 15px 20px;
    border-radius: 5px;
    margin-bottom: 25px;
  }
  
  .alert-error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }
  
  .error-list {
    margin: 10px 0 0 20px;
  }

  @media (max-width: 768px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="form-container">
  <div class="form-header">
    <h1><%= evento ? '‚úèÔ∏è Editar Evento' : 'üéâ Novo Evento' %></h1>
  </div>
  
  <% if (errors && errors.length > 0) { %>
    <div class="alert alert-error">
      <strong>‚ö†Ô∏è Erros no formul√°rio:</strong>
      <ul class="error-list">
        <% errors.forEach(error => { %>
          <li><%= error.msg || error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  
  <div class="form-card">
    <form method="POST" action="<%= action %>">
      <% if (method === 'PUT') { %>
        <input type="hidden" name="_method" value="PUT">
      <% } %>
      
      <div class="form-group">
        <label for="titulo">
          T√≠tulo do Evento <span class="required">*</span>
        </label>
        <input 
          type="text" 
          id="titulo" 
          name="titulo" 
          class="form-control <%= errors.find(e => e.path === 'titulo') ? 'error' : '' %>"
          value="<%= evento ? evento.titulo : '' %>"
          required
          placeholder="Ex: Semana Acad√™mica de Engenharia 2025"
        >
        <% if (errors.find(e => e.path === 'titulo')) { %>
          <div class="form-error"><%= errors.find(e => e.path === 'titulo').msg %></div>
        <% } %>
      </div>
      
      <div class="form-group">
        <label for="descricao">
          Descri√ß√£o
        </label>
        <textarea 
          id="descricao" 
          name="descricao" 
          class="form-control"
          rows="5"
          placeholder="Descreva o evento, programa√ß√£o e informa√ß√µes relevantes..."
        ><%= evento ? (evento.descricao || '') : '' %></textarea>
        <div class="form-hint">Opcional - Informa√ß√µes detalhadas sobre o evento</div>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="data_inicio">
            Data e Hora de In√≠cio <span class="required">*</span>
          </label>
          <input 
            type="datetime-local" 
            id="data_inicio" 
            name="data_inicio" 
            class="form-control <%= errors.find(e => e.path === 'data_inicio') ? 'error' : '' %>"
            value="<%= evento && evento.data_inicio ? new Date(evento.data_inicio).toISOString().slice(0,16) : '' %>"
            required
          >
          <% if (errors.find(e => e.path === 'data_inicio')) { %>
            <div class="form-error"><%= errors.find(e => e.path === 'data_inicio').msg %></div>
          <% } %>
        </div>
        
        <div class="form-group">
          <label for="data_fim">
            Data e Hora de T√©rmino
          </label>
          <input 
            type="datetime-local" 
            id="data_fim" 
            name="data_fim" 
            class="form-control"
            value="<%= evento && evento.data_fim ? new Date(evento.data_fim).toISOString().slice(0,16) : '' %>"
          >
          <div class="form-hint">Opcional</div>
        </div>
      </div>
      
      <div class="form-group">
        <label for="local_evento">
          Local do Evento
        </label>
        <input 
          type="text" 
          id="local_evento" 
          name="local_evento" 
          class="form-control"
          value="<%= evento ? (evento.local_evento || '') : '' %>"
          placeholder="Ex: Audit√≥rio Principal - Campus Curitiba"
        >
        <div class="form-hint">Opcional - Local f√≠sico ou online</div>
      </div>
      
      <div class="form-group">
        <label for="link_inscricao">
          Link de Inscri√ß√£o
        </label>
        <input 
          type="url" 
          id="link_inscricao" 
          name="link_inscricao" 
          class="form-control"
          value="<%= evento ? (evento.link_inscricao || '') : '' %>"
          placeholder="https://eventos.utfpr.edu.br/inscricao"
        >
        <div class="form-hint">Opcional - URL para inscri√ß√µes no evento</div>
      </div>
      
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">
          <%= evento ? 'Atualizar Evento' : 'Criar Evento' %>
        </button>
        <a href="/eventos" class="btn btn-secondary">Cancelar</a>
      </div>
    </form>
  </div>
</div>
